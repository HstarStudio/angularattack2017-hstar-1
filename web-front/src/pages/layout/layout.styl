.page-layout {
  .top-header {
    position: fixed;
    top: 0;
    width: 100%;
    height: 50px;

    h2 {
      margin: 0;
      margin-left: 18px;
      color: #fff;
      line-height: 50px;
      font-family: 'STKaiti';
    }
  }

  .main-container {
    position: fixed;
    top: 50px;
    bottom: 0;
    width: 100%;
    min-width: 720px;

    > ng-component {
      height: 100%;
    }
  }
}
