$border-color = #e0e1e5;

$no-select-text {
  user-select: none;
}

.page-home {
  height: 100%;

  .left-sidebar {
    position: relative;
    width: 200px;
    height: 100%;
    background: #f5f5f5;
    border-right: 1px solid $border-color;

    @extend $no-select-text

    .file-tree-toggle {
      position: absolute;
      right: -16px;
      bottom: 5px;
      display: inline-block;
      width: 16px;
      height: 26px;
      line-height: 26px;
      text-align: center;
      border: 1px solid #e0e1e5;
      border-left: none;
      border-radius: 0 4px 4px 0;
      background-color: #f5f5f5;
      cursor: pointer;
      z-index: 50;
      color: #909090;
    }
  }

  .drag-line {
    position: absolute;
    top: 0;
    right: -4px;
    height: 100%;
    width: 7px;
    cursor: col-resize;
    z-index: 1;
  }

  .right-viewport {
    position: absolute;
    top: 0;
    height: 100%;
    left: 200px;
    right: 0;
    min-width: 520px;

    @extend $no-select-text
  }

  .note-list {
    position: relative;
    width: 50%;
    height: 100%;
    border-right: 1px solid $border-color;
    background-color: #fff;
  }

  .preview {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 50%;

    .preview-toolbar {
      height: 42px;
      border-bottom: 1px solid #d3d3d3;
      padding: 0 5px;
      padding-top: 5px;
    }

    .preview-container {
      height: calc(100% - 42px);
    }
  }

  .file-list {
    a.list-group-item {
      padding-left: 30px;
    }
  }
}
